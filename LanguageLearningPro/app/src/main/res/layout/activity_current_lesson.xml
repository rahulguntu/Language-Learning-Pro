<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lessonLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/lessonNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson 1"
            android:textStyle="bold|italic"
            android:textColor="@color/textPurple"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/backB"
            android:textSize="30sp"/>

        <ImageButton
            android:id="@+id/logOutBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_logout"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/lessonTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson 1"
        android:textStyle="bold"
        android:textColor="@color/textPurple"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        android:layout_below="@+id/lessonLayout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lessonTitleTV">

        <TextView
            android:id="@+id/lessonDescriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Lesson Description"
            android:textColor="@color/black"/>
    </ScrollView>

</RelativeLayout>