<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lessonLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/exerciseNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 1"
            android:textStyle="bold|italic"
            android:textColor="@color/textPurple"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/backB"
            android:textSize="30sp"/>

        <ImageButton
            android:id="@+id/logOutBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_logout"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/timerTV"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/questionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1. I spoke to _______ "
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timerTV"/>

    <RelativeLayout
        android:layout_below="@+id/questionTv"
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/answersSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answerOneBTN"
                android:text="Answer One"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/answerTwoBTN"
                android:text="Answer Two"
                android:textSize="18sp"
                android:layout_below="@+id/answerOneBTN"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/answerThreeBTN"
                android:text="Answer Three"
                android:textSize="18sp"
                android:layout_below="@+id/answerTwoBTN"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <RadioButton
                android:id="@+id/answerFourBTN"
                android:text="Answer Four"
                android:textSize="18sp"
                android:layout_below="@+id/answerThreeBTN"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextQuizBTN"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="8dp"/>


</RelativeLayout>